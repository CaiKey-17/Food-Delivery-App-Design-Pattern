<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
    </style>

    <style name="CustomTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name = "bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name = "android:background">@android:color/primary_text_dark</item>
    </style>

    <style name="BottomNavigationItemStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">13sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NoUnderlineEditText" parent="Widget.Material3.TextInputEditText.FilledBox">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <declare-styleable name="CustomTheme">
        <attr name="customBackgroundColor" format="color"/>
        <attr name="customTextColor" format="color"/>
        <attr name="background_color" format="color"/>
        <attr name="border_color" format="color"/>
        <attr name="background_color_v2" format="color"/>
        <attr name="border_color_v2" format="color"/>
        <attr name="bonus_v1" format="color"/>
        <attr name="bonus_v2" format="color"/>

    </declare-styleable>


</resources>
