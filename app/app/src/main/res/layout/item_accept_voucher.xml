<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	style="@style/SCREEN_MAIN"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginRight="5dp"
		android:orientation="horizontal"
		android:paddingTop="5dp"
		android:paddingBottom="5dp">

		<androidx.cardview.widget.CardView
			android:layout_width="90dp"
			android:layout_height="90dp"
			android:layout_gravity="center"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="5dp"
			app:cardCornerRadius="5sp">

			<ImageView
				android:id="@+id/img_listfood_hor"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				app:srcCompat="@drawable/rice_list" />
		</androidx.cardview.widget.CardView>

		<View
			android:id="@+id/view6"
			android:layout_width="1dp"
			android:layout_height="60dp"
			android:layout_gravity="center"
			android:layout_marginRight="5dp"
			android:background="#F1DCDC" />

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:orientation="vertical">

			<TextView
				android:id="@+id/tx_voucher_name"
				style="@style/TEXT_ITEM"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="5dp"
				android:singleLine="true"
				android:text="Name"
				android:textSize="15sp"
				android:textStyle="bold" />

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="horizontal">

				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginBottom="5dp"
					android:singleLine="true"
					android:text="Số lượng: "
					android:textSize="14sp" />

				<TextView
					android:id="@+id/tx_voucher_quantity"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginBottom="5dp"
					android:text="8386"
					android:textSize="14sp" />

			</LinearLayout>

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="horizontal">

				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginBottom="5dp"
					android:text="HSD: "
					android:textSize="14sp" />

				<TextView
					android:id="@+id/tx_voucher_expiry"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginBottom="5dp"
					android:singleLine="true"
					android:text="Bao nhiêu cũng được"
					android:textSize="14sp" />

			</LinearLayout>

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="horizontal">

				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginBottom="5dp"
					android:singleLine="true"
					android:text="Giá trị: "
					android:textSize="14sp" />

				<TextView
					android:id="@+id/tx_voucher_price"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginBottom="5dp"
					android:text="....."
					android:textSize="14sp" />

			</LinearLayout>

		</LinearLayout>

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:orientation="vertical">


			<Button
				android:id="@+id/accept"
				android:layout_width="match_parent"
				android:layout_height="39dp"
				android:layout_gravity="center"
				android:backgroundTint="#27B8F1"
				android:text="Chấp nhận"
				android:textSize="10dp" />

			<Button
				android:id="@+id/cancel"
				android:layout_width="match_parent"
				android:layout_height="39dp"
				android:layout_gravity="center"
				android:backgroundTint="#FF0000"
				android:text="Từ chối"
				android:textSize="10dp" />
		</LinearLayout>
	</LinearLayout>

</LinearLayout>