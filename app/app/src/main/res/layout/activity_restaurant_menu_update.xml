<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:id="@+id/main"
	style="@style/SCREEN_MAIN"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".Activity.RestaurantMenuUpdate">

	<EditText
		android:id="@+id/edt_sl"
		android:layout_width="267dp"
		android:layout_height="wrap_content"
		android:background="@null"
		android:ems="5"

		android:hint="0"
		android:inputType="text"
		android:textAlignment="textEnd"
		android:textSize="16sp"
		app:layout_constraintEnd_toEndOf="@+id/edt_tenMon"
		app:layout_constraintTop_toTopOf="@+id/textView6" />
	<TextView
		style="@style/TEXT"

			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="Số lượng"
			android:textStyle="bold"
			android:textSize="16sp"
			android:id="@+id/textView6" app:layout_constraintStart_toStartOf="@+id/textView23"
			app:layout_constraintTop_toBottomOf="@+id/view9"
			android:layout_marginTop="16dp"/>

	<ImageView
		android:id="@+id/btn_backDish"
		android:layout_width="35dp"
		android:layout_height="35dp"
		android:layout_marginStart="16dp"
		android:layout_marginTop="8dp"
		android:contentDescription="Food Image"
		android:scaleType="centerCrop"
		android:src="@drawable/back_24"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />
	<TextView
		style="@style/TEXT"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="Ảnh món"
			android:textStyle="bold"
			android:textSize="16sp"
			android:id="@+id/textView20"
			app:layout_constraintEnd_toStartOf="@+id/frameLayout" app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="@+id/frameLayout" android:layout_marginStart="16dp"
			android:layout_marginEnd="20dp" android:layout_marginTop="25dp"/>

	<TextView
		android:id="@+id/textView13"
		style="@style/TEXT"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Cập nhật"
		android:textSize="18sp"
		android:textStyle="bold"
		app:layout_constraintBottom_toBottomOf="@+id/btn_backDish"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="@+id/btn_backDish" />
	<View
			android:layout_width="match_parent"
			android:layout_height="3dp" android:id="@+id/view5"
			app:layout_constraintTop_toBottomOf="@+id/textView13" app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="10dp" android:backgroundTint="#B4B4B4"
			android:background="#929292"/>
	<View
			android:layout_width="match_parent"
			android:layout_height="0.7dp" android:id="@+id/view7"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			android:background="#D2D2D2" app:layout_constraintHorizontal_bias="0.0"
			app:layout_constraintTop_toBottomOf="@+id/frameLayout" android:layout_marginTop="20dp"/>
	<View
			android:layout_width="match_parent"
			android:layout_height="0.7dp" android:id="@+id/view8"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			android:background="#D2D2D2" app:layout_constraintHorizontal_bias="1.0"
			app:layout_constraintTop_toBottomOf="@+id/textView23" android:layout_marginTop="20dp"/>
	<View
			android:layout_width="match_parent"
			android:layout_height="0.7dp" android:id="@+id/view9"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			android:background="#D2D2D2" app:layout_constraintHorizontal_bias="0.0"
			app:layout_constraintTop_toBottomOf="@+id/textView24" android:layout_marginTop="20dp"/>
	<View
			android:layout_width="match_parent"
			android:layout_height="0.7dp" android:id="@+id/view16"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			android:background="#D2D2D2" app:layout_constraintHorizontal_bias="0.0"
			app:layout_constraintTop_toBottomOf="@+id/textView6" android:layout_marginTop="16dp"/>
	<View
			android:layout_width="match_parent"
			android:layout_height="0.7dp" android:id="@+id/view10"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			android:background="#D2D2D2" app:layout_constraintHorizontal_bias="1.0"
			app:layout_constraintTop_toBottomOf="@+id/textView26" android:layout_marginTop="20dp"/>
	<TextView
		style="@style/TEXT"

			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="Giá"
			android:textStyle="bold"
			android:textSize="16sp"
			app:layout_constraintTop_toBottomOf="@+id/view8" android:layout_marginTop="20dp"
			android:id="@+id/textView24" app:layout_constraintStart_toStartOf="@+id/textView23"/>
	<TextView
		style="@style/TEXT"

			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="Tên món"
			android:textStyle="bold"
			android:textSize="16sp"
			android:id="@+id/textView23" app:layout_constraintTop_toBottomOf="@+id/view7"
			android:layout_marginTop="20dp" app:layout_constraintStart_toStartOf="@+id/textView21"/>

	<TextView
		android:id="@+id/btn_group"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:drawableRight="@drawable/baseline_navigate_next_20"
		android:gravity="center"
		android:text="Chọn nhóm
"
			android:textStyle="bold"
			android:textSize="16sp"
			app:layout_constraintEnd_toEndOf="@+id/edt_giaMon"
			app:layout_constraintTop_toTopOf="@+id/textView26"/>
	<TextView
		style="@style/TEXT"

			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Nhóm"
			android:textStyle="bold"
			android:textSize="16sp"
			android:id="@+id/textView26" app:layout_constraintStart_toStartOf="@+id/textView24"
			app:layout_constraintTop_toBottomOf="@+id/view16" android:layout_marginTop="16dp"/>
	<TextView
		style="@style/TEXT"

			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Miêu tả (không bắt buộc)"
			android:textStyle="bold"
			android:paddingVertical="8dp"
			app:layout_constraintTop_toBottomOf="@+id/view10"
			android:layout_marginTop="20dp" android:id="@+id/textView27"
			app:layout_constraintStart_toStartOf="@+id/textView26"/>
	<EditText
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:hint="Ví dụ: Cà chua + Khoai tây chiên + Tương ớt"
			android:maxLength="200"
			android:minHeight="100dp"
			android:inputType="textMultiLine"
			android:background="@drawable/input_search"
			app:layout_constraintTop_toBottomOf="@+id/textView27"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="16dp" android:textSize="15dp" android:gravity="top"
			android:layout_marginTop="5dp" app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="16dp" android:id="@+id/edt_mota"/>

	<Button
		style="@style/BUTTON_OK"
		android:id="@+id/btn_save"
		android:layout_width="match_parent"
		android:layout_height="55dp"
		android:text="Lưu"
		android:textStyle="bold"
		android:textColor="@android:color/white"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent" />


	<TextView
		style="@style/TEXT"
			android:text="Khách hàng sẽ quyết định đặt nhiều hơn!"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/textView21"
			app:layout_constraintTop_toBottomOf="@+id/textView20" app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="16dp" android:layout_marginTop="20dp"
			app:layout_constraintBottom_toBottomOf="@+id/frameLayout" android:layout_marginBottom="25dp"/>
	<FrameLayout
			android:layout_width="100dp"
			android:layout_height="100dp"
			app:layout_constraintTop_toBottomOf="@+id/view5" app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginTop="20dp" android:layout_marginEnd="16dp" android:id="@+id/frameLayout">

		<!-- ImageView to display the image -->
		<ImageView
				android:id="@+id/imageView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:scaleType="centerCrop"

				android:src="@drawable/background_sign_up"/>

		<Button
				android:id="@+id/button"
				android:layout_width="match_parent"
				android:layout_height="40dp"
				android:text="Sửa"
				android:background="@drawable/input_capture"
				android:layout_gravity="bottom"
				android:backgroundTint="#7AEDEDED"
				android:textColor="#FFFFFF"/>

	</FrameLayout>

	<EditText
		android:id="@+id/edt_tenMon"
		android:layout_width="277dp"
		android:layout_height="wrap_content"
		android:layout_marginTop="16sp"
		android:background="@null"

		android:ems="5"
		android:hint="Tên"
		android:inputType="text"
		android:singleLine="true"
		android:textAlignment="textEnd"
		app:layout_constraintEnd_toEndOf="@+id/frameLayout"
		app:layout_constraintTop_toBottomOf="@+id/view7" />

	<EditText
		android:id="@+id/edt_giaMon"
		android:layout_width="263dp"
		android:layout_height="wrap_content"

		android:layout_marginTop="16sp"
		android:background="@null"
		android:ems="5"
		android:hint="0đ"
		android:inputType="text"
		android:singleLine="true"
		android:textAlignment="textEnd"
		app:layout_constraintEnd_toEndOf="@+id/edt_tenMon"
		app:layout_constraintTop_toBottomOf="@+id/view8" />
</androidx.constraintlayout.widget.ConstraintLayout>

