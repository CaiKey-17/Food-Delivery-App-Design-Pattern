<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:app="http://schemas.android.com/apk/res-auto"
			  android:layout_width="match_parent"
			  android:orientation="vertical"
	style="@style/SCREEN_MAIN"
			  android:layout_height="wrap_content"
			  android:padding="5dp" android:id="@+id/voucher_system">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginRight="5dp"
		android:orientation="horizontal"
		android:paddingTop="5dp"
		android:paddingBottom="5dp">

		<androidx.cardview.widget.CardView
			android:layout_width="55dp"
			android:layout_height="55dp"
			android:layout_gravity="center"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="5dp"
			app:cardCornerRadius="5sp">

			<ImageView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				app:srcCompat="@drawable/rice_list" />
		</androidx.cardview.widget.CardView>

		<View
			android:id="@+id/view6"
			android:layout_width="1dp"
			android:layout_height="60dp"
			android:layout_gravity="center"
			android:layout_marginRight="5dp"
			android:background="#F1DCDC" />

		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_weight="1"
			android:orientation="vertical">

			<TextView
				android:id="@+id/nameAdd"
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_marginBottom="5dp"
				android:layout_weight="1"
				android:text="Tên voucher"
				style="@style/TEXT_ITEM"
				android:textSize="15sp"
				android:textStyle="bold" />

			<LinearLayout
					android:id="@+id/dongduoi"
					android:layout_marginEnd="15dp"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:gravity="center_vertical">

				<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Hạn sử dụng: "
						android:textSize="14sp"
						android:maxLines="1"
						android:ellipsize="end" />

				<TextView
						android:id="@+id/expiryAdd"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="5 ngày nữa"
						android:textSize="14sp"
						android:maxLines="1"
						android:ellipsize="end" />
			</LinearLayout>


		</LinearLayout>

		<Button
			android:id="@+id/btn_apply"
			style="@style/BUTTON_OK_V2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:text="Dùng ngay">

		</Button>
	</LinearLayout>

</LinearLayout>