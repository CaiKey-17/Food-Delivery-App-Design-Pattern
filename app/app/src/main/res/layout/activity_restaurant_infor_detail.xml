<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/main"
	style="@style/SCREEN_MAIN"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".Activity.RestaurantInforDetail">

	<ImageView
		android:id="@+id/btn_backDish"
		android:layout_width="35dp"
		android:layout_height="35dp"
		android:layout_marginStart="16dp"
		android:layout_marginTop="8dp"
		android:contentDescription="Food Image"
		android:scaleType="centerCrop"
		android:src="@drawable/back_24"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/textView13"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Thông tin quán ăn"
		style="@style/TEXT"
		android:textSize="18sp"
		android:textStyle="bold"
		app:layout_constraintBottom_toBottomOf="@+id/btn_backDish"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="@+id/btn_backDish" />

	<View
		android:id="@+id/view5"
		android:layout_width="match_parent"
		android:layout_height="3dp"
		android:layout_marginTop="10dp"
		android:background="#929292"
		android:backgroundTint="#B4B4B4"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/textView13" />

	<TextView
		android:id="@+id/textView43"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="16dp"
		android:text="Ảnh đại diện"
		style="@style/TEXT"
		android:textSize="16dp"
		android:textStyle="bold"
		app:layout_constraintBottom_toBottomOf="@+id/btn_change_picture"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="@+id/btn_change_picture"
		app:layout_constraintVertical_bias="1.0" />

	<TextView
		android:id="@+id/textView79"
		style="@style/TEXT"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginStart="16dp"
		android:layout_marginTop="16dp"
		android:layout_marginEnd="16dp"
		android:text="Tên nhà hàng"
		android:textSize="16dp"
		android:textStyle="bold"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.0"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="@+id/view31" />

	<EditText
		android:id="@+id/edt_name"
		style="@style/TEXT_V2"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginStart="16dp"
		android:layout_marginTop="16dp"
		android:layout_marginEnd="16dp"
		android:hint="Nhập tên nhà hàng"
		android:singleLine="true"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/textView79" />

	<TextView
		android:id="@+id/textView46"
		style="@style/TEXT"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginStart="16dp"
		android:layout_marginTop="16dp"
		android:layout_marginEnd="16dp"
		android:text="Địa chỉ"
		android:textSize="16dp"
		android:textStyle="bold"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.0"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/view33" />

	<TextView
		android:id="@+id/textView45"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginStart="16dp"
		android:layout_marginTop="16dp"
		android:layout_marginEnd="16dp"
		android:text="Số điện thoại"
		android:textSize="16dp"
		android:textStyle="bold"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.0"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/view30" />

	<EditText
		android:id="@+id/edt_address"
		style="@style/TEXT_V2"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginStart="16dp"
		android:layout_marginTop="16dp"

		android:layout_marginEnd="16dp"
		android:hint="Hà Bắc, Sơn Hạ, Quảng Ngãi"
		android:singleLine="true"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.0"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/textView46" />

	<EditText
		android:id="@+id/edt_phoneNumber"
		style="@style/TEXT_V2"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginStart="16dp"
		android:layout_marginTop="16dp"

		android:layout_marginEnd="16dp"
		android:hint="0000x213123x"
		android:singleLine="true"
		app:layout_constraintEnd_toEndOf="@+id/textView46"
		app:layout_constraintHorizontal_bias="1.0"
		app:layout_constraintStart_toStartOf="@+id/textView46"
		app:layout_constraintTop_toBottomOf="@+id/view34" />

	<View
		android:id="@+id/view30"
		android:layout_width="wrap_content"
		android:layout_height="0.7dp"
		android:layout_marginTop="16dp"
		android:background="#D2D2D2"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/edt_address" />

	<View
		android:id="@+id/view34"
		android:layout_width="wrap_content"
		android:layout_height="0.7dp"
		android:layout_marginTop="16dp"
		android:background="#D2D2D2"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.0"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/textView45" />

	<View
		android:id="@+id/view33"
		android:layout_width="wrap_content"
		android:layout_height="0.7dp"
		android:layout_marginTop="16dp"
		android:background="#D2D2D2"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.0"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/edt_name" />

	<ImageView
		android:id="@+id/imageView8"
		android:layout_width="50dp"

		android:layout_height="50dp"
		android:scaleType="centerCrop"
		app:layout_constraintBottom_toBottomOf="@+id/btn_change_picture"
		app:layout_constraintEnd_toStartOf="@+id/btn_change_picture"
		app:layout_constraintTop_toTopOf="@+id/btn_change_picture"
		app:srcCompat="@drawable/background_sign_up" />

	<ImageView
		android:id="@+id/btn_change_picture"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="24dp"
		android:layout_marginEnd="16dp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/view5"
		app:srcCompat="@drawable/baseline_navigate_next_20" />

	<View
		android:id="@+id/view31"
		android:layout_width="wrap_content"
		android:layout_height="0.7dp"
		android:layout_marginTop="16dp"
		android:background="#D2D2D2"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.0"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/imageView8" />

	<Button
		style="@style/BUTTON_OK_V2"
		android:id="@+id/button5"
		android:layout_width="200dp"
		android:layout_height="55dp"
		android:layout_marginBottom="16dp"
		android:text="Lưu"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>

