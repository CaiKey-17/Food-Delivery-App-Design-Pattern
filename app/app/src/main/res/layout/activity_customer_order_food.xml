<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
            android:id="@+id/linearLayout8"
            style="@style/SCREEN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="9dp">

        <ImageView
                android:id="@+id/btn_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                app:srcCompat="@drawable/back_24" />

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">

            <TextView

                android:id="@+id/tenquan"
                style="@style/TEXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Quán ăn ngon nhất Sài gòn"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <View
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="5dp" />

    </LinearLayout>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/VIEW"
          >

        <LinearLayout
                style="@style/VIEW"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="7dp"
                    style="@style/SCREEN"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/textView59"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="16dp"
                        android:drawableLeft="@drawable/baseline_error_24"
                        android:drawablePadding="5dp"
                        android:text="Vui lòng kiểm tra chính xác địa điểm giao hàng."
                        style="@style/TEXT"
                        android:textSize="10sp" />



                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                    <RadioButton
                            android:layout_marginLeft="16dp"
                            android:gravity="center" android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/position_now">

                    </RadioButton>

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:orientation="vertical">

                        <TextView
                                android:id="@+id/textView60"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Vị trí hiện tại"
                                style="@style/TEXT"
                                android:textSize="13sp"
                                android:textStyle="bold" />

                    </LinearLayout>

                    <ImageView
                            android:id="@+id/imageView23"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="16dp"
                            app:srcCompat="@drawable/baseline_navigate_next_20" />
                </LinearLayout>

                <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="12dp"
                        app:cardBackgroundColor="#F1EAEA"
                        app:cardCornerRadius="5dp">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                        <EditText
                                android:id="@+id/textView64"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:textColor="#000000"
                                android:layout_weight="1"
                                android:hint="Thêm chi tiết địa chỉ và chỉ dẫn giao hàng"
                                android:textSize="11sp" />

                        <TextView
                                android:id="@+id/textView65"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:text="Chỉnh sửa"
                                android:textColor="#0947C5"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    style="@style/SCREEN"
                    android:orientation="vertical">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        style="@style/SCREEN"
                        android:orientation="horizontal">

                    <TextView
                            android:id="@+id/textView66"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_weight="1"
                            android:text="Tóm tắt đơn hàng"
                            style="@style/TEXT"
                            android:textStyle="bold" />


                </LinearLayout>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="0.7dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:background="#E9DFDF" />

                <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="10dp" android:id="@+id/list_dish_order"/>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="0.7dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:background="#E9DFDF" />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="7dp"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Tổng tạm tính"
                            style="@style/TEXT"
                            android:textSize="12sp" />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="175.000đ"
                            style="@style/TEXT"
                        android:textSize="12sp" android:id="@+id/tong"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="7dp"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Phí giao hàng"
                        style="@style/TEXT"
                            android:textSize="12sp" />

                    <TextView
                            android:id="@+id/phi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="23.000đ"
                        style="@style/TEXT"
                            android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="7dp"
                        android:id="@+id/tinhphi"
                        android:visibility="gone"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Phí ngân hàng"
                            style="@style/TEXT"
                            android:textSize="12sp" />

                    <TextView
                            android:id="@+id/phiNH"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="23.000đ"
                            style="@style/TEXT"
                            android:textSize="12sp" />
                </LinearLayout>


                <LinearLayout
                        android:id="@+id/show_voucher"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="7dp"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Áp dụng voucher"
                        style="@style/TEXT"
                            android:textSize="12sp" />

                    <TextView
                            android:id="@+id/tv_price_voucher"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="23.000đ"
                        style="@style/TEXT"
                            android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="7dp"
                        android:orientation="horizontal"
                        android:visibility="gone">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Mã khuyến mãi"
                            android:textColor="#000000"
                            android:textSize="12sp" />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="-10.000đ"
                            android:textColor="#000000"
                            android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                style="@style/SCREEN"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:text="Áp dụng ưu đãi"
                    style="@style/TEXT"
                        android:textStyle="bold" />

                <View
                        android:layout_width="match_parent"
                        android:layout_height="0.7dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:background="#E9DFDF" />

                <LinearLayout
                        android:id="@+id/btn_add_voucher"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="7dp"
                        android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="7dp"
                        android:layout_marginBottom="2dp"
                        app:cardCornerRadius="45dp">

                        <ImageView
                            android:id="@+id/imageView9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/voucher_order" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text="Áp dụng ưu đãi hiện có thôi nào"
                        style="@style/TEXT"
                            android:textSize="12sp" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                style="@style/SCREEN"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:text="Phương thức thanh toán"
                    style="@style/TEXT"
                        android:textStyle="bold" />

                <View
                        android:layout_width="match_parent"
                        android:layout_height="0.7dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:background="#E9DFDF" />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView37"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="12dp"
                            app:srcCompat="@drawable/zalo" />

                    <CheckBox
                        android:id="@+id/banking"
                        style="@style/TEXT"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@null"
                        android:button="@null"
                        android:drawableEnd="?android:attr/listChoiceIndicatorMultiple"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:text="ZaloPay"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    style="@style/TEXT"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">



                        <ImageView
                            android:id="@+id/imageView38"
                            android:layout_width="35dp"
                            android:layout_gravity="center"
                            android:layout_height="35dp"
                            android:layout_marginRight="7dp"
                            app:srcCompat="@drawable/dollar" />

                    <CheckBox
                        android:id="@+id/cash"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@null"
                        android:button="@null"
                        android:drawableEnd="?android:attr/listChoiceIndicatorMultiple"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:text="Thanh toán khi nhận hàng"
                        android:textSize="12sp" />


                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

	<LinearLayout
			android:id="@+id/linearLayout9"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			style="@style/SCREEN"
			android:orientation="vertical"
			android:padding="10dp" android:background="#04CDE8">

		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginBottom="7dp"
				android:orientation="horizontal">

			<TextView
					android:id="@+id/textView70"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="Tổng cộng"
					android:textStyle="bold"
					style="@style/TEXT"
					android:textSize="15sp"/>

			<TextView
					android:id="@+id/tong1"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:gravity="right"
					android:text="198.000đ"
					style="@style/TEXT"
					android:textSize="16dp"
					android:textStyle="bold"/>


		</LinearLayout>



		<Button
				android:id="@+id/button6"
				android:layout_width="match_parent"
				android:layout_height="55dp"
				style="@style/BUTTON_RED"
				android:text="Đặt món"/>
	</LinearLayout>
</LinearLayout>
