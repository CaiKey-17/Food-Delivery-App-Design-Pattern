<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/detail_dish"
    style="@style/SCREEN_MAIN"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <ImageView
        android:id="@+id/dishImageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingStart="16dp">

        <TextView
            android:id="@+id/dishNameTextView"
            android:layout_width="wrap_content"
            style="@style/TEXT_ITEM"
            android:layout_height="wrap_content"
            android:text="Gỏi cuốn"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dishQuantityTextView"
            style="@style/TEXT_V2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số lượng: 100"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/dishPriceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30,000 đ"
           style="@style/TEXT"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
